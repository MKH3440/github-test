<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mkh3440.githubtest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GithubApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.search.SearchActivity"
            android:label="@string/search_activity_title"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ui.search.SearchResultsActivity"
            android:label="@string/search_activity_results_title"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".ui.user.UserActivity"
            android:label="@string/user_activity_title"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".ui.repository.RepositoryActivity"
            android:label="@string/repository_activity_title"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>